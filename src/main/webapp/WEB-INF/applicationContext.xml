	<bean id="emf" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="packagesToScan" value="com.cmc.entity"></property>
		<property name="jpaProperties">
			<props>
				<!-- <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop> -->
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.hbm2ddl.auto">create</prop>
			</props>
		</property>
		<property name="persistenceProvider">
			<bean class="org.hibernate.jpa.HibernatePersistenceProvider"></bean>
		</property>
	</bean>
	<bean id="jpaDialect" class="org.springframework.orm.jpa.vendor.HibernateJpaDialect"></bean>
	<tx:annotation-driven transaction-manager="transactionManager"/>
     
    <bean class="org.springframework.orm.jpa.JpaTransactionManager" id="transactionManager">
    	<property name="dataSource" ref="dataSource"></property>
    </bean>
    <jpa:repositories base-package="com.cmc.repository"></jpa:repositories>
    
    <import resource="security.xml"/>
</beans>